{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://narratoria.dev/schemas/skill-manifest.schema.json",
  "title": "Narratoria Skill Manifest",
  "description": "Schema for skill.json files following Agent Skills Standard",
  "type": "object",
  "required": ["name", "version", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "minLength": 2,
      "maxLength": 50,
      "description": "Unique skill identifier (lowercase, alphanumeric, hyphens only)"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable skill name for UI display"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., '1.0.0')"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of skill capabilities"
    },
    "author": {
      "type": "string",
      "maxLength": 100,
      "description": "Skill author name or organization"
    },
    "license": {
      "type": "string",
      "maxLength": 50,
      "description": "License identifier (e.g., 'MIT', 'Apache-2.0')"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to skill documentation or repository"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "description": "Searchable tags for skill categorization"
    },
    "priority": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "default": 50,
      "description": "Skill priority for plan generator selection (0=low, 100=high)"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "narration",
          "memory",
          "reputation",
          "randomness",
          "rules-engine",
          "asset-generation",
          "world-building",
          "character-management",
          "combat",
          "dialogue",
          "quest-tracking"
        ]
      },
      "uniqueItems": true,
      "description": "Declarative capability tags for plan generator"
    }
  }
}
