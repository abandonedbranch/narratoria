{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://narratoria.dev/schemas/campaign/manifest.schema.json",
  "title": "Campaign Manifest",
  "description": "Metadata describing a Narratoria campaign package",
  "type": "object",
  "required": ["title", "version"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Campaign title",
      "examples": ["Chronicles of Merlin", "I Am Bread"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Campaign version (semver)",
      "examples": ["1.0.0", "2.1.0"]
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Campaign author name(s)",
      "examples": ["Jane Storyteller", "Example Author"]
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief campaign description for browsing/selection",
      "examples": ["An epic fantasy retelling of Arthurian legend from Merlin's perspective"]
    },
    "genre": {
      "type": "string",
      "description": "Primary genre classification",
      "examples": [
        "High Fantasy",
        "Science Fiction",
        "Horror",
        "Mystery",
        "Historical Fiction",
        "Contemporary Fantasy",
        "Cyberpunk",
        "Post-Apocalyptic"
      ]
    },
    "tone": {
      "type": "string",
      "description": "Overall tone and mood",
      "examples": [
        "Epic, Introspective, Morally Complex",
        "Lighthearted, Whimsical",
        "Dark, Gritty, Tense",
        "Adventurous, Optimistic"
      ]
    },
    "content_rating": {
      "type": "string",
      "description": "Content rating for age-appropriateness",
      "enum": [
        "Everyone",
        "Everyone 10+",
        "Teen",
        "Mature",
        "Adults Only"
      ]
    },
    "rules_hint": {
      "type": "string",
      "enum": ["rules-light", "narrative", "crunchy", "tactical"],
      "description": "Hint about game mechanics style preference",
      "default": "rules-light"
    },
    "hydration_guidance": {
      "type": "string",
      "description": "Guidance for AI generation behavior",
      "examples": [
        "Execute faithfully - all content is intentionally crafted",
        "Fill gaps creatively but respect constraints",
        "Generate freely - minimal seed data provided"
      ]
    },
    "content_warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional content warnings for sensitive topics",
      "examples": [["violence", "death", "moral complexity"]]
    },
    "estimated_playtime_hours": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 100,
      "description": "Estimated playtime in hours",
      "examples": [3, 10, 25]
    },
    "player_count": {
      "type": "object",
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "max": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        }
      },
      "description": "Supported player count (currently single-player only)"
    },
    "campaign_format_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Campaign format specification version",
      "default": "1.0.0",
      "examples": ["1.0.0"]
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Optional campaign homepage URL"
    },
    "license": {
      "type": "string",
      "description": "Content license (e.g., Creative Commons)",
      "examples": ["CC BY-SA 4.0", "All Rights Reserved", "MIT"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 10,
      "description": "Searchable tags for discovery",
      "examples": [["magic", "medieval", "quest", "moral-choices"]]
    }
  },
  "additionalProperties": false
}
