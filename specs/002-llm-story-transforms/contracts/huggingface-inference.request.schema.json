{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://narratoria.local/contracts/huggingface-inference.request.schema.json",
  "title": "Hugging Face Inference API Request",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "inputs": {
      "description": "The input string (prompt) sent to the model.",
      "type": "string"
    },
    "parameters": {
      "description": "Optional generation parameters (model-dependent).",
      "type": "object",
      "additionalProperties": true
    },
    "options": {
      "description": "Optional inference options (model-dependent).",
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["inputs"]
}
