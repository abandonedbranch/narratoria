{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abandonedbranch.github.io/narratoria/schemas/game-state.json",
  "title": "GameState",
  "type": "object",
  "required": ["inventory", "quests", "npcs", "reputation", "worldState", "playerChoices", "metadata"],
  "properties": {
    "inventory": {
      "type": "object",
      "properties": {
        "items": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["id", "name", "description", "quantity", "acquiredAt"],
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "description": {"type": "string"},
              "quantity": {"type": "integer", "minimum": 0},
              "metadata": {"type": "object"},
              "acquiredAt": {"type": "string", "format": "date-time"}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "quests": {
      "type": "object",
      "properties": {
        "activeQuests": {"type": "array"},
        "completedQuests": {"type": "array"}
      },
      "additionalProperties": true
    },
    "npcs": {"type": "object"},
    "reputation": {"type": "object"},
    "worldState": {"type": "object"},
    "playerChoices": {"type": "object"},
    "metadata": {
      "type": "object",
      "required": ["version", "sessionId", "createdAt", "lastUpdatedAt"],
      "properties": {
        "version": {"type": "string"},
        "sessionId": {"type": "string"},
        "createdAt": {"type": "string", "format": "date-time"},
        "lastUpdatedAt": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
