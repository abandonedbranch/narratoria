{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abandonedbranch.github.io/narratoria/schemas/narrator-plan.json",
  "title": "NarratorPlan",
  "type": "object",
  "required": ["actions"],
  "properties": {
    "reasoning": { "type": "string" },
    "timeoutSeconds": { "type": "integer", "minimum": 1 },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["actionId", "skillName", "parameters"],
        "properties": {
          "actionId": { "type": "string", "minLength": 1 },
          "skillName": { "type": "string", "minLength": 1 },
          "parameters": { "type": "object" },
          "toolBinary": { "type": "string" },
          "timeoutSeconds": { "type": "integer", "minimum": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
