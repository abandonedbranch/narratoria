{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://narratoria.dev/schemas/execution-result.schema.json",
  "title": "Execution Result",
  "description": "Result of executing a Plan JSON, including full execution trace",
  "type": "object",
  "required": ["planId", "success", "toolResults"],
  "properties": {
    "planId": {
      "type": "string",
      "format": "uuid",
      "description": "The requestId of the executed plan"
    },
    "success": {
      "type": "boolean",
      "description": "True if all required tools completed successfully"
    },
    "canReplan": {
      "type": "boolean",
      "description": "True if narrator AI should attempt to generate a new plan"
    },
    "failedTools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of toolIds that failed during execution"
    },
    "disabledSkills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Skills to disable in subsequent plan generation attempts"
    },
    "toolResults": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ToolResult"
      },
      "description": "Execution trace for each tool in the plan"
    },
    "aggregatedState": {
      "type": "object",
      "additionalProperties": true,
      "description": "Merged session state after applying all state_patch events"
    },
    "aggregatedAssets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AssetReference"
      },
      "description": "All assets generated during plan execution"
    },
    "executionTimeMs": {
      "type": "integer",
      "minimum": 0,
      "description": "Total execution time in milliseconds"
    },
    "attemptNumber": {
      "type": "integer",
      "minimum": 1,
      "description": "Which plan execution attempt this represents (max 3 per plan)"
    }
  },
  "$defs": {
    "ToolResult": {
      "type": "object",
      "required": ["toolId", "state"],
      "properties": {
        "toolId": {
          "type": "string",
          "description": "The toolId from the plan"
        },
        "state": {
          "type": "string",
          "enum": ["success", "failed", "skipped", "timeout"],
          "description": "Final execution state of the tool"
        },
        "output": {
          "type": "object",
          "additionalProperties": true,
          "description": "Tool output data (from done event summary or collected state)"
        },
        "events": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ProtocolEvent"
          },
          "description": "All NDJSON events emitted by the tool"
        },
        "executionTimeMs": {
          "type": "integer",
          "minimum": 0,
          "description": "Tool execution time in milliseconds"
        },
        "retryCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of retry attempts made"
        },
        "error": {
          "$ref": "#/$defs/ToolError"
        }
      }
    },
    "ToolError": {
      "type": "object",
      "description": "Error details when tool fails",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code from tool's error event or internal code"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "category": {
          "type": "string",
          "enum": ["tool_failure", "circular_dependency", "timeout", "invalid_json", "process_error"],
          "description": "Category of failure for replan strategy"
        },
        "details": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "ProtocolEvent": {
      "type": "object",
      "required": ["version", "type"],
      "properties": {
        "version": {
          "type": "string",
          "const": "0"
        },
        "type": {
          "type": "string",
          "enum": ["log", "state_patch", "asset", "ui_event", "error", "done"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "AssetReference": {
      "type": "object",
      "required": ["assetId", "kind", "mediaType", "path"],
      "properties": {
        "assetId": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "mediaType": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "toolId": {
          "type": "string",
          "description": "Which tool generated this asset"
        }
      }
    }
  }
}
