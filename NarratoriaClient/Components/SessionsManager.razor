@implements IChatCommandComponent
@implements IDisposable

<section class="sessions-manager">
    <header class="sessions-manager__header">
        <h3>Session Manager</h3>
        <p>Select a past session, start fresh, or clean up old stories.</p>
    </header>

    <div class="sessions-manager__actions">
        <button type="button" @onclick="StartNewSessionAsync" disabled="@_isBusy">
            Start New Session
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <p class="sessions-manager__error">@_errorMessage</p>
    }

    <ul class="sessions-manager__list">
        @foreach (var session in _sessions)
        {
            <li class="sessions-manager__item @(session.IsActive ? "active" : null)">
                <div class="sessions-manager__details">
                    <span class="sessions-manager__name">@session.Name</span>
                    <span class="sessions-manager__meta">
                        @session.MessageCount message@(session.MessageCount == 1 ? "" : "s")
                        &middot; Updated @session.UpdatedAt.ToLocalTime().ToString("g")
                    </span>
                </div>
                <div class="sessions-manager__item-actions">
                    <button type="button"
                            @onclick="() => SwitchSessionAsync(session.SessionId)"
                            disabled="@(_isBusy || session.IsActive)">
                        @if (session.IsActive)
                        {
                            <span>Active</span>
                        }
                        else
                        {
                            <span>Switch</span>
                        }
                    </button>
                    <button type="button"
                            class="danger"
                            @onclick="() => DeleteSessionAsync(session.SessionId)"
                            disabled="@_isBusy">
                        Delete
                    </button>
                </div>
            </li>
        }
    </ul>
</section>

@code {
    [Inject] private IAppDataService AppData { get; set; } = default!;
    [CascadingParameter] public CommandHostContext? CommandHost { get; set; }

    private IReadOnlyList<ChatSessionSummary> _sessions = Array.Empty<ChatSessionSummary>();
    private bool _isBusy;
    private string? _errorMessage;

    public string CommandToken => "sessions";
    public string DisplayName => "Session Manager";
    public string Description => "Switch between sessions, start new adventures, or clear past stories.";

    protected override async Task OnInitializedAsync()
    {
        AppData.SessionsChanged += HandleSessionsChanged;
        await LoadSessionsAsync();
    }

    private async Task LoadSessionsAsync()
    {
        _sessions = await AppData.GetSessionsAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task StartNewSessionAsync()
    {
        if (_isBusy)
        {
            return;
        }

        _isBusy = true;
        _errorMessage = null;

        try
        {
            await AppData.CreateSessionAsync();
            CommandHost?.Close();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Unable to start a new session. {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    private async Task SwitchSessionAsync(string sessionId)
    {
        if (_isBusy)
        {
            return;
        }

        _isBusy = true;
        _errorMessage = null;

        try
        {
            await AppData.SwitchSessionAsync(sessionId);
            CommandHost?.Close();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Unable to switch sessions. {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    private async Task DeleteSessionAsync(string sessionId)
    {
        if (_isBusy)
        {
            return;
        }

        _isBusy = true;
        _errorMessage = null;

        try
        {
            await AppData.DeleteSessionAsync(sessionId);
            CommandHost?.Close();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Unable to delete the session. {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    private void HandleSessionsChanged(object? sender, IReadOnlyList<ChatSessionSummary> summaries)
    {
        _sessions = summaries;
        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AppData.SessionsChanged -= HandleSessionsChanged;
    }
}
