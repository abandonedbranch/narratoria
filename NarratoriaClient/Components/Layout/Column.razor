<div class="grid-column @Class" style="@BuildStyle()">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter] public int ColumnSpan { get; set; } = 1;
    [Parameter] public int RowSpan { get; set; } = 1;

    private string? BuildStyle()
    {
        var styles = new List<string>();

        if (ColumnSpan > 1)
        {
            styles.Add($"grid-column: span {ColumnSpan}");
        }

        if (RowSpan > 1)
        {
            styles.Add($"grid-row: span {RowSpan}");
        }

        return styles.Count > 0 ? string.Join(';', styles) : null;
    }
}
